@using Ascend_Forum.ViewModels;

@{
    ViewData["Title"] = "Category Details";
}

@model CategoryDetailsViewModel

<div class="text-center">
    <h1>
        @ViewData["Title"]
    </h1>
</div>

@{
    var firstPost = Model.Posts.FirstOrDefault();
}

@if (firstPost == null)
{
    <h4>
       Empty posts 
    </h4>

    return;
}

<div class="container-fluid my-5">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">@nameof(firstPost.Title)</th>
                            <th scope="col">@nameof(firstPost.CreatorAscendName)</th>
                            <th scope="col">@nameof(firstPost.DateCreated)</th>
                            <th scope="col">@nameof(firstPost.CommentsCount)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model.Posts)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Post" asp-action="ById" asp-route-id="@post.Id">@post.Title</a>
                                </td>

                                <td>@(post.CreatorAscendName)</td>
                                <td>@(post.DateCreated)</td>
                                <td>@(post.CommentsCount)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    a {
        color: #E91E63;
        text-decoration: none !important;
        background-color: transparent;
    }
</style>
